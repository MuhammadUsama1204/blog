
  
  <%= form_with model: person do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% @people.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
     <div>
      <%= form.label :gender %><br>
      <%= form.text_field :gender %>
      <% @people.errors.full_messages_for(:gender).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
    
      <%= form.label :age %><br>
      <%= form.text_field :age %><br>
      <% @people.errors.full_messages_for(:age).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
 


    <div>
      <%= form.submit %>
    </div>
  <% end %>
